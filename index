<style>
  body {
    margin: 0; padding: 0;
    background: black;
    color: red;
    font-family: "Courier New", Courier, monospace;
    text-align: center;
    user-select: none;
    overflow: hidden;
  }
  #title {
    margin-top: 40vh;
    font-size: 2.5em;
    text-shadow: 0 0 20px red;
  }
  #scareBtn {
    margin: 30px auto;
    padding: 20px 40px;
    font-size: 1.8em;
    background: darkred;
    color: white;
    border: none;
    border-radius: 8px;
    box-shadow: 0 0 15px red;
    cursor: pointer;
    transition: background 0.3s ease;
  }
  #scareBtn:hover {
    background: crimson;
  }
  #scaryEye {
    display: none;
    position: fixed;
    top: 50%; left: 50%;
    width: 220px; height: 220px;
    margin: -110px 0 0 -110px;
    z-index: 9999;
    animation: blink 0.8s infinite;
  }
  @keyframes blink {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.1; }
  }
  .shake {
    animation: shakeAnim 0.6s;
  }
  @keyframes shakeAnim {
    0% { transform: translate(2px,1px) rotate(0); }
    25% { transform: translate(-2px,-1px) rotate(-1deg); }
    50% { transform: translate(2px,-2px) rotate(1deg); }
    75% { transform: translate(-2px,2px) rotate(-1deg); }
    100% { transform: translate(2px,-1px) rotate(0); }
  }
